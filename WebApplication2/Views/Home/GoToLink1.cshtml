@{
    ViewBag.Title = "Expressions";
}
<h2>Expressions</h2>
<div class="container well" ng-app="" ng-init="myColor='lightblue'; quantity=2; cost=5; person={firstName:'Mark', lastName:'Zuckerberg'}; fruits=['Mango','Jack-fruit','Apple']">
    <input type="text" style="background-color:{{myColor}}" ng-model="myColor" value="myColor" /><br />
    <div class="panel panel-body">
        Quantity: <input placeholder="Insert Quantity" ng-model="quantity" />
        Cost: <input placeholder="Insert Cost" ng-model="cost" />
        <p>Total Cost = {{quantity * cost}}</p>
        <p> Another way of <i><b>expression</b></i> - Total Cost: <span ng-bind="quantity*cost"></span> </p>
    </div>
    <div>
        <h4 class="textColor">Angular JS Object as same as JavaScript Object</h4>
        <p>Name: {{person.firstName + " " + person.lastName}}</p>
    </div>
    <div>
        <h4 class="textColor">Looping with ng-repeat:</h4>
        
        <ul>
            <li ng-repeat="i in fruits">
                {{ i }}
            </li>
        </ul>
        <p style="color:orangered">The ng-repeat directive used on an array of objects.</p>
    </div>
</div>

